{
  "name": "hyperion-accessibility",
  "version": "1.0.0",
  "description": "Outils d'audit d'accessibilité pour Hyperion - RGAA 4.1",
  "private": true,
  "scripts": {
    "audit:a11y": "./scripts/audit_accessibility.sh",
    "test:a11y": "jest tests/accessibility/",
    "test:pa11y": "pa11y-ci",
    "test:axe": "axe http://localhost:8000/dashboard/ --tags wcag2a,wcag2aa --exit",
    "install:a11y-tools": "npm install -g pa11y pa11y-ci @axe-core/cli html-validate lighthouse"
  },
  "keywords": [
    "accessibility",
    "rgaa",
    "wcag",
    "audit",
    "django"
  ],
  "devDependencies": {
    "@axe-core/cli": "^4.7.2",
    "@axe-core/puppeteer": "^4.7.2",
    "axe-core": "^4.7.2",
    "html-validate": "^8.2.0",
    "jest": "^29.6.2",
    "jest-axe": "^8.0.0",
    "jest-puppeteer": "^9.0.0",
    "lighthouse": "^10.4.0",
    "pa11y": "^6.2.3",
    "pa11y-ci": "^3.0.1",
    "puppeteer": "^21.0.2"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/accessibility/setup.js"
    ],
    "testMatch": [
      "**/tests/accessibility/**/*.test.js"
    ],
    "testTimeout": 30000
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-repo/hyperion.git"
  },
  "author": "Équipe Hyperion",
  "license": "MIT"
}
